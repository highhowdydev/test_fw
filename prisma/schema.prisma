generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  steam      String
  license    String
  discord    String
  ip         String
  name       String
  characters Character[]
}

model Character {
  id          String  @id @default(uuid())
  firstName   String
  lastName    String
  dob         String
  gender      String
  nationality String
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
}
